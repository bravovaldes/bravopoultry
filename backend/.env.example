# ===========================================
# BRAVOPOULTRY - CONFIGURATION BACKEND
# ===========================================

# Database
# Dev: sqlite:///./bravopoultry.db
# Prod: postgresql://user:password@host:5432/bravopoultry
DATABASE_URL=sqlite:///./bravopoultry.db

# Security
# IMPORTANT: Generer une cle secrete forte en production!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# App
APP_NAME=BravoPoultry
DEBUG=True
API_V1_PREFIX=/api/v1

# Frontend URL (pour les liens dans les emails)
FRONTEND_URL=http://localhost:3000

# CORS (separer par des virgules)
# Dev: http://localhost:3000
# Prod: https://bravopoultry.vercel.app,https://bravopoultry.com
CORS_ORIGINS=http://localhost:3000

# Email (SMTP)
# Gmail: smtp.gmail.com:587 (utiliser App Password)
# Brevo/Sendinblue: smtp-relay.brevo.com:587
# Mailgun: smtp.mailgun.org:587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@bravopoultry.com

# SMS (optional - Twilio, Vonage, etc.)
SMS_API_KEY=
SMS_SENDER=

# Redis (pour taches de fond - optionnel)
REDIS_URL=
